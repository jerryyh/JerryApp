<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JerryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme_Start" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <!-- 启动时页面为透明色，避免显示空白页，好像有问题，还是空白页 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 这个起作用，启动时有点延时，实际就是加载了透明的背景，如微信6.3.28 -->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!-- 设置启动背景图片，避免显示空白页，如支付宝9.9.5 -->
<!--        <item name="android:windowBackground">@drawable/welcome_bottom</item>-->
        <!-- 隐藏标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/black</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
<!--        <item name="picture.statusFontColor">false</item>-->
        <!-- 隐藏状态栏 -->
<!--                 <item name="android:windowFullscreen">true</item>-->
    </style>


    <style name="AppTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#E94715</item>
        <item name="colorControlNormal">#000000</item>
        <!--<item name="colorPrimaryDark">@color/comm_black</item>-->
        <item name="colorPrimary">@color/white</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">true</item>

    </style>
</resources>